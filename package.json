{
  "name": "consignment-genie-ui",
  "version": "1.0.0",
  "description": "Angular UI for ConsignmentGenie",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "generate": "ts-node scripts/generate-smoke-tests.ts",
    "generate:dry-run": "ts-node scripts/generate-smoke-tests.ts --dry-run",
    "generate:verbose": "ts-node scripts/generate-smoke-tests.ts --dry-run --verbose",
    "generate:components": "ts-node scripts/generate-smoke-tests.ts --type=component",
    "generate:services": "ts-node scripts/generate-smoke-tests.ts --type=service",
    
    "nightly": "ts-node scripts/nightly-smoke-runner.ts",
    "nightly:dry": "ts-node scripts/nightly-smoke-runner.ts --skip-fixes",
    "nightly:verbose": "ts-node scripts/nightly-smoke-runner.ts --verbose",
    "nightly:max6": "ts-node scripts/nightly-smoke-runner.ts --max-components=6",
    
    "workflow": "ts-node scripts/feature-workflow.ts",
    "workflow:status": "ts-node scripts/feature-workflow.ts status",
    "workflow:list": "ts-node scripts/feature-workflow.ts list",
    "workflow:next": "ts-node scripts/feature-workflow.ts next",
    
    "feature:admin": "ts-node scripts/feature-workflow.ts process admin",
