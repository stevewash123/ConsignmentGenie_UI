    "feature:settings-storefront": "ts-node scripts/feature-workflow.ts process settings-storefront",
    "feature:price-management": "ts-node scripts/feature-workflow.ts process price-management",
    "feature:bulk-operations": "ts-node scripts/feature-workflow.ts process bulk-operations"
