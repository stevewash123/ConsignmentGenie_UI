  "devDependencies": {
    "typescript": "~5.4.0",
    "ts-node": "^10.9.0",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "@angular/core": ">=17.0.0",
    "@angular/common": ">=17.0.0"
